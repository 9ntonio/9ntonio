{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "react",
        "react-dom"
      ],
      "allowedVersions": "< 19.0.0",
      "description": "Staying on React 18.x, blocking React 19.x updates"
    },
    {
      "matchPackageNames": [
        "eslint-plugin-react-hooks"
      ],
      "allowedVersions": "< 5.0.0",
      "description": "Staying on eslint-plugin-react-hooks 4.x, blocking 5.x updates"
    }
  ],
  "timezone": "America/New_York",
  "prConcurrentLimit": 3,
  "minor": {
    "automerge": false
  },
  "patch": {
    "automerge": false
  }
}
